<!-- Edit User Profile Page -->
<div class="middleBox">

  <h1> Edit Profile </h1>
  <h2><%= notice || "" %></h2>

  <div class="editSection">
  <p><i> Update your information below, <b><%= @user.first_name %>

  
<!-- Bootstrap Accordion for Editing Profile -->

<div class="accordion accordion-flush" id="accordionFlushExample">


  <!-- Update Email -->

<div class="accordion-item">
    
  <h2 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
        Update Your Email Information
      </button>
    </h2>

    <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
      <div class="accordion-body">
        <%= form_with model: @user, method: :patch do |f| %>
          <div>
            <%= f.label :email, "New Email" %>
            <%= f.email_field :email, required: true %>
            <%= f.submit "Update Email"%>
          </div>
        <% end %>
      </div>
    </div>

  </div>

  <!-- Update Password -->

  <div class="accordion-item">

    <h2 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
        Update Your Password
      </button>
    </h2>

    <div id="flush-collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
      <div class="accordion-body">
          <%= form_with model: @user, method: :patch do |f| %>
          <div>
            <%= f.label :password, "New Password" %>
            <%= f.password_field :password, required: true %>
            <%= f.submit "Update Password"%>
          </div>
        <% end %>
      </div>
    </div>

  </div>

</div>
<br>
<div class="editButton">
  <%= link_to "Profile Page", user_path(@user), class: "btn_custom btn_profile" %>
</div>

</div>


